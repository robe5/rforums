<h1 class="page_title">New topic</h1>
<%- form_for [@category, @topic] do |form| -%>
  <%= render 'shared/error_messages', :target => @topic %>
  <ul id="new-topic">
    <li class="block">
      <%= form.label :title %>
      <%= form.text_field :title, :class => "text large" %>
    </li>
    <li class="block">
      <%= form.label :text %>
      <%= form.text_area :text, :class => "text large" %>
    </li>
    <li class="block submit">
      <%= form.submit 'Create', :disable_with => 'Creating topic...', :class => "awesome small black" %>
      or <%= link_to 'cancel', @category %>
    </li>
  </ul>
<%- end -%>
</div>