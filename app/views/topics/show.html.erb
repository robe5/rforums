<% content_for :page_title do %>
  <%= @category.name %>
<% end %>

<style type="text/css" media="screen">
  .topic-post{
    margin-bottom: 30px;
  }
  .meta{
    border-bottom: 1px solid #e5e5e5;
    border-top: 1px solid #e5e5e5;
    margin-bottom: 10px;
    padding: 10px 0;
    position: relative;
    background-color: #f5f5f5;
  }
  .meta .avatar{
    float: left;
    margin: 0 10px 10px 10px;
    height: 40px;
    width: 40px;
  }
  .meta h4{
    margin: 0;
  }
  .meta .date{
    color: #777;
    font-size: 11px;
    margin: 0;
    padding-bottom: 10px;
  }
  .admin-functions{
    right: 10px;
    top: 10px;
    position: absolute;
  }
  .admin-functions ul{
    float: right;
    margin: 0;
  }
  .admin-functions ul.actions li{
    display:inline;
    list-style-type: none;
    margin: 0;
    padding: 0
  }
  .admin-functions ul.actions li a{
    font-weight: normal;
    padding: 1px 2px;
  }
  h1{
    color: #000;
    font-size: 24px;
    font-weight: normal;
    line-height: 30px;
    margin: 0 0 20px;
  }
  
  .topic-post .topic-post-body{
    margin: 20px 10px;
  }
  .topic-post .topic-post-footer{
    border-top: 1px dashed #ddd;
    color: #aaa;
  	font-size: 12px;
  	padding-top: 10px;
  	margin-left: 10px;
  	margin-right: 10px;
  }
  
  .topic-post-post .meta{
    border: 0;
  }
  .topic-post-post .avatar{
    float: left;
    margin-left:10px;
  }
  .topic-post-post .topic-post-footer{
    border-top: 1px dashed #ddd;
    color: #aaa;
  	font-size: 12px;
  	margin-top: 10px;
  	padding-top: 10px;
  }
  
</style>

<%= render :partial => 'topic_post', :locals => {:topic_post => @topic} %>
<%= render :partial => 'topic_post', :collection => @posts %>

<div id="reply">
  <h3>Your reply</h3>
  <%= form_for [@category, @topic, Post.new] do |form| %>
    <%= form.text_area :text %><br />
    <%= form.submit 'Submit', :class => "awesome small black" %>
  <% end %>
</div>