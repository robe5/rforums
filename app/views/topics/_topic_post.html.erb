<div class="post">
  <div class="meta" style="">
    <span class="user-role" style="display:none"><%= topic_post.user.role %></span>
    Posted by <strong><%= link_to topic_post.user.name, topic_post.user %></strong> 
    on <span class="timestamp"><%= topic_post.created_at.to_s(:long) %></span>
    <div class="admin-functions">
      <ul class="actions">
        <% if admin? %>
        <li><%= link_to 'Delete', item_path(topic_post), :class => "caution", :method => :delete, :"data-confirm" => "Are you sure?" %></li>
        <% end %>
        <li><%= link_to 'Reply', :anchor => 'reply' %></li>
      </ul>
    </div>
  </div>
  
  <%= image_tag gravatar(topic_post.user.email, 40), :class => 'avatar' %>
  <div class="body">
    <div><%= markdown(topic_post.text) %></div>
    <div class="footer">
      <%= user_signature(topic_post.user) %>
    </div>    
  </div>
  <div class="clear"></div>
</div>