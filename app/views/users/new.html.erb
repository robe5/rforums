<h1 class="page_title">Register a new user</h1>

<p>Do you already have an account? <%= link_to "Login here", users_path %></p>

<%- form_for @user do |form| -%>
  <%= render "shared/error_messages", :target => @user %>  
  <ul id="register">
    <li>
      <%= form.label :email %>
      <%= form.text_field :email, :class => "text" %>
    </li>
    <li>
      <%= form.label :name %>
      <%= form.text_field :name, :class => "text" %>
    </li>
    <li>
      <%= form.label :password %>
      <%= form.password_field :password, :class => "text" %>
    </li>
    <li>
      <%= form.label :password_confirmation, 'Confirm Password' %>
      <%= form.password_field :password_confirmation, :class => "text" %>
    </li>
    <li class="submit">
      <%= submit_tag 'Sign Up', :disable_with => 'Signing you up...', :class => "awesome small black" %>
      or <%= link_to 'cancel', root_path %>
    </li>
  </ul>
<%- end -%>
</div>