<style type="text/css" media="screen">
  #gravatar{
    float:left;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 5px;
  }
  #user-info{
    margin-left: 150px;
  }
  #user-info h3{
    font-weight: bold;
  }
</style>
<h1 class="page_title"><%= @user.name %></h1>

<div id="gravatar">
  <%= image_tag gravatar(@user.email, 100), :width => 100, :height => 100 %>
</div>
                  
<div id="user-info">
  <ul id="">
    <li>
      <h3><%= @user.name %></h3>
      <%= @user.role %>
    </li>
    <li>
      <strong>Signature</strong><br />
      <%= @user.signature %>
    </li>
  </ul>
</div>