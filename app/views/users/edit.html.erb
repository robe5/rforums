<style type="text/css" media="screen">
  #gravatar{
    float:left;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 5px;
  }
  #user-info{
    margin-left: 150px;
  }
</style>
<h1 class="page_title"><%= @user.name %></h1>

<div id="gravatar">
  <%= image_tag gravatar(@user.email, 100), :width => 100, :height => 100 %>
</div>
                  
<div id="user-info">
<%- form_for @user do |form| -%>
  <%= render "shared/error_messages", :target => @user %>
  <ul id="">
    <li>
      <%= form.label :email %>
      <%= form.text_field :email, :class => 'text' %>
    </li>
    <li>
      <%= form.label :name %>
      <%= form.text_field :name, :class => 'text' %>
    </li>
    <li>
      <%= form.label :password %>
      <%= form.password_field :password, :class => 'text' %>
    </li>
    <li>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, :class => 'text' %>
    </li>
    
    <li class="submit">
      <%= submit_tag 'Save', :disable_with => 'Signing you up...', :class => 'awesome small black' %>
      or <%= link_to 'Cancel', root_path %>
    </li>
  </ul>
<%- end -%>
</div>